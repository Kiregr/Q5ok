<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <include layout="@layout/calculator_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBackground"
                android:minHeight="80dp"
                android:text="C"
                android:textColor="@color/colorFuncBtnText"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_small_bracket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBackground"
                android:minHeight="80dp"
                android:text="( )"
                android:textColor="@color/colorFuncBtnText"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBackground"
                android:minHeight="80dp"
                android:text="%"
                android:textColor="@color/colorFuncBtnText"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorFuncBtnBackground"
                android:minHeight="80dp"
                android:text="bk"
                android:textColor="@color/colorFuncBtnText"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">

            <Button
                android:id="@+id/btn_seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="25sp"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorNumBtnBackground"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_eight"
                android:text="8"
                android:layout_marginLeft="2dp"
                android:textSize="25sp"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorNumBtnBackground"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_nine"
                android:text="9"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textSize="25sp"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorNumBtnBackground"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_multiply"
                android:text="X"
                android:textSize="30sp"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorFuncBtnText"
                android:background="@color/colorFuncBtnBackground"

                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>